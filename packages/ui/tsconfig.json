{
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": true,
    "declaration": true,
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    // "noImplicitAny": false,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "outDir": "lib",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": [
      "es5",
      "es6",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext"
    ],
    "paths": {
      "@src": [
        "src/index.ts"
      ],
      "@components": [
        "src/components/"
      ],
      "@types": [
        "@types/"
      ],
      "@commonStyle": [
        "src/commonStyle/"
      ],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}